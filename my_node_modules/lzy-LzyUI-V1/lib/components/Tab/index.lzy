import LzyReact, { myUseState } from 'lzy-react'
import './index.css'

export default function TabContainer(props, children) {

    const { dataSorce, style = '', defaultActiveKey = dataSorce?.[0].key, sideWidth } = props

    const [activeKey, setActiveKey] = myUseState(defaultActiveKey)

    // 侧边样式
    const sideStyle = sideWidth ? `width:${sideWidth}px` : ''

    return (
        <div style={style}>
            <div class="d-flex align-items-start lzyTab">
                <div class="nav flex-column nav-pills me-5 lzyTab-left"
                    style={sideStyle}
                    id="v-pills-tab" role="tablist" aria-orientation="vertical">

                    {dataSorce.map(({ title, key }) => (
                        <button
                            class={key === activeKey ? "nav-link active" : "nav-link"}
                            onClick={() => { setActiveKey(key) }}
                            id={key + "tab"}
                            data-bs-toggle="pill"
                            data-bs-target={"#" + key}
                            type="button"
                            role="tab"
                            aria-controls={key}
                            aria-selected="true">
                            {title}
                        </button>
                    ))}


                </div>


                <div class="tab-content" id="v-pills-tabContent">
                    {dataSorce.map(({ key, render }) => (
                        <div
                            class={key === activeKey ? "show fade" : "hide fade"}
                            id={key}
                            role="tabpanel"
                            aria-labelledby={key + "tab"}>
                            {typeof render === 'function' ? render() : render}
                        </div>
                    ))}
                </div>


            </div>
        </div>

    )
}





